<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BukuController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Form Data Buku">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            
            <HBox spacing="20.0">
               <children>
                  <TextField fx:id="txtJudul" prefWidth="300.0" promptText="Judul Buku" />
                  <TextField fx:id="txtPenulis" prefWidth="200.0" promptText="Penulis" />
               </children>
            </HBox>
            
            <HBox spacing="20.0">
               <children>
                  <TextField fx:id="txtHarga" prefWidth="150.0" promptText="Harga (Rp)" />
                  <TextField fx:id="txtStok" prefWidth="100.0" promptText="Stok" />
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <Button onAction="#onAdd" prefWidth="70.0" text="Add" />
                  <Button onAction="#onEdit" prefWidth="70.0" text="Edit" />
                  <Button onAction="#onDelete" prefWidth="70.0" text="Delete" />
               </children>
            </HBox>

            <TableView fx:id="tblBuku" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colJudul" text="Judul" />
                <TableColumn fx:id="colPenulis" text="Penulis" />
                <TableColumn fx:id="colHarga" text="Harga" />
                <TableColumn fx:id="colStok" text="Stok" />
              </columns>
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>