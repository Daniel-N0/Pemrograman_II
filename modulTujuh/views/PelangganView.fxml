<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PelangganController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Form Data Pelanggan">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="60.0" text="Nama" />
                  <TextField fx:id="txtNama" prefWidth="250.0" promptText="Nama Lengkap" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="60.0" text="Email" />
                  <TextField fx:id="txtEmail" prefWidth="250.0" promptText="contoh@email.com" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="60.0" text="Telepon" />
                  <TextField fx:id="txtTelepon" prefWidth="250.0" promptText="Nomor HP" />
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAdd" prefWidth="70.0" text="Add" />
                  <Button mnemonicParsing="false" onAction="#onEdit" prefWidth="70.0" text="Edit" />
                  <Button mnemonicParsing="false" onAction="#onDelete" prefWidth="70.0" text="Delete" />
               </children>
               <VBox.margin><Insets top="5.0" /></VBox.margin>
            </HBox>

            <TableView fx:id="tblPelanggan" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colNama" text="Nama" />
                <TableColumn fx:id="colEmail" text="Email" />
                <TableColumn fx:id="colTelepon" text="Telepon" />
              </columns>
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>