<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PenjualanController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Form Transaksi Penjualan">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            
            <HBox spacing="15.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Pilih Pelanggan" />
                        <ComboBox fx:id="cbPelanggan" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Pilih Buku" />
                        <ComboBox fx:id="cbBuku" prefWidth="200.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <HBox spacing="15.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Jumlah" />
                        <TextField fx:id="txtJumlah" prefWidth="100.0" promptText="Qty" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Tanggal" />
                        <DatePicker fx:id="dpTanggal" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <Button onAction="#onAdd" prefWidth="120.0" text="Simpan Transaksi" />
                  <Button onAction="#onDelete" prefWidth="80.0" text="Hapus" />
               </children>
            </HBox>

            <TableView fx:id="tblPenjualan" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colPelanggan" text="Pelanggan" />
                <TableColumn fx:id="colBuku" text="Buku" />
                <TableColumn fx:id="colJumlah" text="Jumlah" />
                <TableColumn fx:id="colTotal" text="Total Harga" />
                <TableColumn fx:id="colTanggal" text="Tanggal" />
              </columns>
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>